---
import { Image } from "astro:assets";

interface Project {
  title: string;
  githubLink: string;
  demoLink: string;
  image: string;
}

const { title, githubLink, demoLink, image } = Astro.props;
---

<article class="w-80 relative group bg-white shadow-lg rounded-3xl p-6">
  <Image
    src={image}
    alt="fake project"
    class="h-full w-full object-fill scale-100 transition-all duration-300 group-hover:scale-110"
  />
  <span
    class="absolute w-full h-full rounded-3xl top-0 left-0 z-10 opacity-0 transition-opacity duration-300 group-hover:opacity-70"
  >
    <div class="flex flex-col justify-center items-center h-full">
      <h3 class="text-2xl font-bold text-white">{title}</h3>
      <div class="flex space-x-4 mt-4">
        <a
          href={githubLink}
          class="text-white bg-gray-800 px-4 py-2 rounded-lg"
          target="_blank"
          rel="noopener noreferrer"
        >
          Github
        </a>
        <a
          href={demoLink}
          class="text-white bg-gray-800 px-4 py-2 rounded-lg"
          target="_blank"
          rel="noopener noreferrer"
        >
          Demo
        </a>
      </div>
    </div>
  </span>
</article>
